<div class="banner">

  <div class="content">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
<h2>Movies in this list</h2>
<%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"%>
</div>

<p><% @bookmark = Bookmark.all %></p>

<div class="container">
    <div class="cards">
        <% @list.bookmarks.each do |bookmark|  %>
        <div class="card-product">
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-product-infos">
            <h2> <%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
            <div class="delete"><%= link_to "Delete", new_list_bookmark_path(bookmark.id), method: :delete %></div>
             <p class="bookmarkcomment"><%= bookmark.comment %></p>

          </div>
        </div>
        <% end %>
    </div>
</div>
