<div class="banner">

  <div class="content">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
<h2>Add movie</h2>
<%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"%>
</div>

<p><% @bookmark = Bookmark.all %></p>

<div class="container">
    <div class="cards">
      <% @list.bookmarks.each do |bookmark|  %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= bookmark.movie.poster_url %>)">
        <%= bookmark.movie.title %>
         <div class="delete"><%= link_to "Delete", new_list_bookmark_path(bookmark.id), method: :delete %></div>
      </div>

    <% end %>
    </div>
</div>
