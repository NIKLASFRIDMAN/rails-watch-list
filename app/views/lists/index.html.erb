
<div class="banner">

  <div class="content">
    <h1>Save any kind of movies</h1>
    <h2>Classic</h2>
  </div>
</div>

<div class="container">
<h2>My List</h2>
<%= link_to "Create List", new_list_path, class: "btn btn-primary"%>


</div>

<div class="container">
    <div class="cards">
      <% @lists.each do |list|  %>
        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= cl_image_path list.photo.key %>)">
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= list.image_url %>)">
        <% end %>

          <%= link_to list.name, list %>
          <div class="delete"><%= link_to "Delete", list_path(list.id), method: :delete %></div>
        </div>
      <% end %>
    </div>
</div>
